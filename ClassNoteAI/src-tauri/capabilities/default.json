{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "process:default",
    "updater:default",
    "http:default",
    "fs:default",
    "fs:allow-appdata-read-recursive",
    {
      "identifier": "fs:allow-read",
      "options": {
        "scope": [
          "$APP_DATA/**",
          "$HOME/Library/Application Support/com.classnoteai/**",
          "$HOME/eduTranslate/ClassNoteAI/src-tauri/target/**"
        ]
      }
    },
    {
      "identifier": "http:allow-fetch",
      "allow": [
        {
          "url": "http://*"
        },
        {
          "url": "https://*"
        },
        {
          "url": "http://*:*"
        },
        {
          "url": "https://*:*"
        },
        {
          "url": "http://*:*/**"
        },
        {
          "url": "https://*:*/**"
        },
        {
          "url": "http://**"
        },
        {
          "url": "https://**"
        }
      ]
    }
  ]
}