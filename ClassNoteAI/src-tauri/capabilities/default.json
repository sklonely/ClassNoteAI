{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "process:default",
    "updater:default",
    "http:default",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        {
          "url": "http://127.0.0.1:*/**"
        },
        {
          "url": "http://localhost:*/**"
        },
        {
          "url": "http://100.*:*/**"
        },
        {
          "url": "https://**"
        }
      ]
    }
  ]
}